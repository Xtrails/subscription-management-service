    <!--
        Added the constraints for entity Payment.
    -->
    <changeSet id="20250707225002-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="payment"
                                 constraintName="fk_payment__user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="external_user"
                                 />

        <addForeignKeyConstraint baseColumnNames="client_subscription_id"
                                 baseTableName="payment"
                                 constraintName="fk_payment__client_subscription_id"
                                 referencedColumnNames="id"
                                 referencedTableName="client_subscription"
                                 />

        <addForeignKeyConstraint baseColumnNames="payment_system_id"
                                 baseTableName="payment"
                                 constraintName="fk_payment__payment_system_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_system"
                                 />
    </changeSet>
</databaseChangeLog>
